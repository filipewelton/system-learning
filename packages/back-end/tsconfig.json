{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "__mocks/*": ["mocks/*"],
      "__application/*": ["src/application/*"],
      "__configs/*": ["src/configs/*"],
      "__data/*": ["src/data/*"],
      "__domain/*": ["src/domain/*"],
      "__providers/*": ["src/providers/*"],
      "__web/*": ["src/web/*"]
    }
  }
}
